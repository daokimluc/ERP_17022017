@model IEnumerable<ERP.Web.Models.Database.DM_HANG_HOA>

@{
    ViewBag.Title = "Index";
}
<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<link href="https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="~/Areas/TruongAnHCM/Content/css/HangHoaTAHCM.css" rel="stylesheet" />
<link href="~/Content/download/dist/css/AdminLTE.css" rel="stylesheet" />
<script src="~/Content/download/angularjs/angular.min.js"></script>
<script src="~/Content/download/angularjs/dirPagination.js"></script>
<script src="~/Areas/TruongAnHCM/Content/js/HangHoaTAHCM.js"></script>
<link href="~/Content/download/bootstrap/css/layout_all.css" rel="stylesheet" />
<div ng-app="hanghoaApp" ng-controller="hangHoaCtrl" >
    <div class="content">


        <div id="quick-access">
            <form class="form-inline quick-search-form" role="form" action="#">
                <div class="form-group" style="width: 100%">
                    <input type="text" style="width: 60%" class="form-control" placeholder="Nhập mã hàng cần tìm kiếm vào đây" ng-model="search_text">
                </div>         
            </form>
        </div>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Thêm hàng mới</button>

        <!-- Modal Thêm mới -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Thêm hàng mới</legend>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Mã hàng HT: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Mã hàng hệ thống" class="form-control input-md" ng-model="mahanght">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Mã hàng nhập: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Mã hàng nhập" class="form-control input-md" ng-model="mahangnhap">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Tên hàng: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Tên hàng" class="form-control input-md" ng-model="tenhang">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Mã nhóm hàng: </label>
                                    <div class="col-md-4">
                                        <select ng-model="manhomhang" class="form-control input-md">
                                            <option ng-repeat="x in danhsachnhomhang" value="{{x.MA_NHOM_HANG}}">{{x.TEN_NHOM_HANG}}</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Seri: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Seri" class="form-control input-md" ng-model="seri">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Đơn vị tính: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Đơn vị tính" class="form-control input-md" ng-model="donvitinh">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Model đặc biệt: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Model đặc biệt" class="form-control input-md" ng-model="modeldacbiet">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Hình ảnh: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Hình ảnh" class="form-control input-md" ng-model="hinhanh">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Đặc tính: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Đặc tính" class="form-control input-md" ng-model="dactinh">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">TK hạch toán kho: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="TK hạch toán kho" class="form-control input-md" ng-model="tkhachtoankho">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">TK doanh thu: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="TK doanh thu" class="form-control input-md" ng-model="tkdoanhthu">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">TK chi phí: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="TK chi phí" class="form-control input-md" ng-model="tkchiphi">
                                    </div>
                                </div>

                                <!-- Textarea -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="ghichu">Ghi chú</label>
                                    <div class="col-md-4">
                                        <textarea class="form-control" ng-model="ghichu">Ghi chú</textarea>
                                    </div>
                                </div>
                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="anmelden"></label>
                                    <div class="col-md-8 addnew">
                                        <button id="addnew" name="addnew" class="btn btn-success" ng-click="add()" data-dismiss="modal">Thêm mới</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button id="exit" name="exit" class="btn btn-danger" data-dismiss="modal">Thoát</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--end modal-->
        <!-- Modal Update -->
        <div class="modal fade" id="myEdit" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Cập nhật kho</legend>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Mã hàng HT: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Mã hàng hệ thống" class="form-control input-md" ng-model="item.MA_HANG_HT" ng-disabled="true">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Mã hàng nhập: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Mã hàng nhập" class="form-control input-md" ng-model="item.MA_HANG_NHAP">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Tên hàng: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Tên hàng" class="form-control input-md" ng-model="item.TEN_HANG">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Mã nhóm hàng: </label>
                                    <div class="col-md-4">
                                        <select ng-model="item.MA_NHOM_HANG" class="form-control input-md">
                                            <option ng-repeat="x in danhsachnhomhang" value="{{x.MA_NHOM_HANG}}">{{x.TEN_NHOM_HANG}}</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Seri: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Seri" class="form-control input-md" ng-model="item.SERI">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Đơn vị tính: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Đơn vị tính" class="form-control input-md" ng-model="item.DON_VI_TINH">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Model đặc biệt: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Model đặc biệt" class="form-control input-md" ng-model="item.MODEL_DAC_BIET">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Hình ảnh: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Hình ảnh" class="form-control input-md" ng-model="item.HINH_ANH">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Đặc tính: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Đặc tính" class="form-control input-md" ng-model="item.DAC_TINH">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">TK hạch toán kho: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="TK hạch toán kho" class="form-control input-md" ng-model="item.TK_HACH_TOAN_KHO">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">TK doanh thu: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="TK doanh thu" class="form-control input-md" ng-model="item.TK_DOANH_THU">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">TK chi phí: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="TK chi phí" class="form-control input-md" ng-model="item.TK_CHI_PHI">
                                    </div>
                                </div>

                                <!-- Textarea -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="ghichu">Ghi chú</label>
                                    <div class="col-md-4">
                                        <textarea class="form-control" id="ghichu" name="ghichu" ng-model="item.GHI_CHU">Ghi chú</textarea>
                                    </div>
                                </div>
                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="anmelden"></label>
                                    <div class="col-md-11 edit">
                                        <button class="btn btn-success" ng-click="save(item.MA_HANG_HT)" data-dismiss="modal">Lưu</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button class="btn btn-danger" data-dismiss="modal">Thoát</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->
        <!-- Modal delete -->
        <div class="modal fade" id="delete_item" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Xóa kho</legend>
                                <center>Bạn có thực sự muốn xóa hàng <b>{{item.MA_HANG_HT}}</b></center>
                                <p></p>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="delete"></label>
                                    <div class="col-md-8">
                                        <button id="delete" name="delete" class="btn btn-danger" ng-click="delete(item.MA_HANG_HT)" data-dismiss="modal">Xóa</button>
                                        <button id="exit" name="exit" class="btn btn-success" data-dismiss="modal">Thoát</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->

        <table id="example" class="table table-striped table-bordered" cellspacing="0" name="tblhanghoa" ng-controller="tonkhoCtrl">
            <thead>
                <tr>
                    <th></th>
                    <th>Mã hàng HT</th>
                    <th>Mã hàng nhập</th>
                    <th>Tên hàng</th>
                    <th>Mã nhóm hàng</th>
                    <th>Đơn vị tính</th>
                    <th>Model đặc biệt</th>
                    <th>Sửa</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tbody>
                <tr dir-paginate-start="item in filtered = (danhsachhanghoa | filter: {MA_HANG_HT:search_text}) | itemsPerPage:3 " class="hover" ng-class-odd="'odd'" ng-class-even="'even'">
                    <td>
                        <button class="expand" ng-if="item.expanded" ng-click="item.expanded = false"><i class="fa minus fa-minus-circle" aria-hidden="true"></i></button>
                        <button class="expand" type="button" ng-if="!item.expanded" ng-click="item.expanded = true" ng-><i class="fa plus fa-plus-circle" aria-hidden="true"></i></button>
                    </td>
                    <td class="text-left">{{item.MA_HANG_HT}}</td>
                    <td class="text-left">{{item.MA_HANG_NHAP}}</td>
                    <td class="text-left">{{item.TEN_HANG}}</td>
                    <td class="text-left">{{item.MA_NHOM_HANG}}</td>
                    <td>{{item.DON_VI_TINH | uppercase}}</td>
                    <td><input type="checkbox" ng-checked="item.MODEL_DAC_BIET==true" ng-model="item.MODEL_DAC_BIET"><br></td>

                    <td>
                        <button class="btn btn-success btn-circle" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#myEdit"><i class="glyphicon glyphicon-edit"></i></button>
                    </td>
                    <td>
                        <button class="btn btn-warning btn-circle" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#delete_item"><i class="glyphicon glyphicon-remove"></i></button>
                        <!--<button class="btn btn-warning btn-circle" ng-click="delete(item.MA_KHO)"><i class="glyphicon glyphicon-remove"></i></button>-->
                    </td>

                </tr>
                <!--Detail row-->
                <tr ng-if="item.expanded" dir-paginate-end="">

                    <td colspan="9">

                        <div class="content expandrow">

                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#chitiet">Chi tiết hàng hóa</a></li>
                                <li><a data-toggle="tab" href="#tonkho" ng-click="get_tonkho(item.MA_HANG_HT)">Tồn kho</a></li>
                            </ul>

                            <div class="tab-content">
                                <!--Tab chi tiết hàng hóa-->
                                <div id="chitiet" class="tab-pane fade in active">
                                    <div class="col-md-2">
                                        <img src="~/Content/download/dist/img/avatar.png" height="150" width="150" />
                                    </div>
                                    <div class="col-md-3">
                                        <table class="table noborder">
                                            <tr>
                                                <td>Mã hàng HT:</td>
                                                <td>{{item.MA_HANG_HT}}</td>
                                            </tr>
                                            <tr>
                                                <td>Mã hàng nhập</td>
                                                <td>{{item.MA_HANG_NHAP}}</td>
                                            </tr>
                                            <tr>
                                                <td>Tên hàng</td>
                                                <td>{{item.TEN_HANG}}</td>
                                            </tr>
                                            <tr>
                                                <td>Mã nhóm hàng</td>
                                                <td>{{item.MA_NHOM_HANG}}</td>
                                            </tr>
                                            <tr>
                                                <td>Seri</td>
                                                <td>{{item.SERI}}</td>
                                            </tr>

                                        </table>
                                    </div>
                                    <div class="col-md-3">
                                        <table class="table noborder">
                                            <tr>
                                                <td>Hạch toán</td>
                                                <td>{{item.TK_HACH_TOAN_KHO}}1</td>
                                            </tr>
                                            <tr>
                                                <td>Doanh thu</td>
                                                <td>{{item.TK_DOANH_THU}}</td>
                                            </tr>
                                            <tr>
                                                <td>Chi phí</td>
                                                <td>{{item.TK_CHI_PHI}}</td>
                                            </tr>

                                        </table>
                                    </div>
                                    <div class="col-md-3">
                                        <table class="table noborder">
                                            <tr>
                                                <td>Đơn vị tính</td>
                                                <td>{{item.DON_VI_TINH}}</td>
                                            </tr>
                                            <tr>
                                                <td>Đặc tính</td>
                                                <td>{{item.DAC_TINH}}</td>
                                            </tr>
                                            <tr>
                                                <td>Ghi chú</td>
                                                <td>{{item.GHI_CHU}}</td>
                                            </tr>

                                        </table>
                                    </div>
                                </div>

                                <div id="tonkho" class="tab-pane fade">
                                    <table class="table table-fill">
                                        <thead>
                                            <tr>
                                                <th>Mã kho</th>
                                                <th>Số lượng tồn</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="tonkho in danhsachtonkho">
                                                <td>{{tonkho.MA_KHO}}</td>
                                                <td>{{tonkho.SL_TON}}</td>
                                            </tr>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td><strong style="font-size: 20px">Tổng tồn:</strong></td>
                                                <td>{{getTotal('SL_TON')}}</td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="9" style="border: none !important">
                        <dir-pagination-controls max-size="1" style="float:right;"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script src="~/Content/download/angularjs/angular-ui-router.js"></script>

