@model IEnumerable<ERP.Web.Models.Database.DM_KHO>

@{
    ViewBag.Title = "Index";
}
<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<link href="https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="~/Areas/TruongAnHCM/Content/css/KhoTAHCM.css" rel="stylesheet" />
<link href="~/Content/download/dist/css/AdminLTE.css" rel="stylesheet" />
<script src="~/Content/download/angularjs/angular.min.js"></script>
<script src="~/Content/download/angularjs/dirPagination.js"></script>
<script src="~/Areas/TruongAnHCM/Content/js/KhoTAHCM.js"></script>
<link href="~/Content/download/bootstrap/css/layout_all.css" rel="stylesheet" />
<div ng-app="khoApp" ng-controller="khoCtrl">
    <div class="content">

        <div id="quick-access">
            <form class="form-inline quick-search-form" role="form" action="#">
                <div class="form-group" style="width: 100%">
                    <input type="text" class="form-control" placeholder="Nhập từ khóa vào đây" ng-model="search_text"  style="width: 60%">
                </div>
            </form>
        </div>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Thêm kho mới</button>

        <!-- Modal Thêm mới -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset id="addnewform">
                                <!-- Form Name -->
                                <legend>Thêm kho mới</legend>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Mã kho: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Mã kho" class="form-control input-md" ng-model="makho">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Tên kho: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Tên kho" class="form-control input-md" ng-model="tenkho">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Địa chỉ kho: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Địa chỉ kho" class="form-control input-md" ng-model="diachikho">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Mã kho cha: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Mã kho cha" class="form-control input-md" ng-model="makhocha">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <!-- Textarea -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="ghichu">Ghi chú</label>
                                    <div class="col-md-4">
                                        <textarea class="form-control" ng-model="ghichu">Ghi chú</textarea>
                                    </div>
                                </div>
                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="anmelden"></label>
                                    <div class="col-md-8 addnew">
                                        <button id="addnew" name="addnew" class="btn btn-success" ng-click="add()" data-dismiss="modal">Thêm mới</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button id="exit"  name="exit" class="btn btn-danger" data-dismiss="modal">Thoát</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--end modal-->
        <!-- Modal Update -->
        <div class="modal fade" id="myEdit" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Cập nhật kho</legend>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Mã kho: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Mã kho" class="form-control input-md" ng-model="item.MA_KHO" ng-disabled="true">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Tên kho: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Tên kho" class="form-control input-md" ng-model="item.TEN_KHO">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Địa chỉ: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Địa chỉ" class="form-control input-md" ng-model="item.DIA_CHI_KHO">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Mã kho cha: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Mã kho cha" class="form-control input-md" ng-model="item.MA_KHO_CHA">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Trực thuộc: </label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Trực thuộc" class="form-control input-md" ng-model="item.TRUC_THUOC" ng-disabled="true">
                                    </div>
                                </div>
                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="name">Ghi chú</label>
                                    <div class="col-md-4">
                                        <input type="text" placeholder="Ghi chú" class="form-control input-md" ng-model="item.GHI_CHU">
                                    </div>
                                </div>
                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="anmelden"></label>
                                    <div class="col-md-11 edit">
                                        <button class="btn btn-success" ng-click="save(item.MA_KHO)" data-dismiss="modal">Lưu</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button class="btn btn-danger" data-dismiss="modal">Thoát</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->
        <!-- Modal delete -->
        <div class="modal fade" id="delete_item" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Xóa kho</legend>
                                <center>Bạn có thực sự muốn xóa hàng <b>{{item.MA_KHO}}</b></center>
                                <p></p>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="delete"></label>
                                    <div class="col-md-8">
                                        <button id="delete" name="delete" class="btn btn-danger" ng-click="delete(item.MA_KHO)" data-dismiss="modal">Xóa</button>
                                        <button id="exit" name="exit" class="btn btn-success" data-dismiss="modal">Thoát</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->

        <table id="example" class="table table-striped table-bordered" cellspacing="0" name="tblhanghoa">
            <thead>
                <tr>
                    <th>Mã kho</th>
                    <th>Tên kho</th>
                    <th>Địa chỉ</th>
                    <th>Mã kho cha</th>
                    <th>Trực thuộc</th>
                    <th>Ghi chú</th>
                    <th>Sửa</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tbody>
                <tr dir-paginate-start="item in filtered = (danhsachkho | filter: {TEN_KHO:search_text}) | itemsPerPage:3 " class="hover" ng-class-odd="'odd'" ng-class-even="'even'">
                    <td class="text-left">{{ item.MA_KHO }}</td>
                    <td class="text-left">{{item.TEN_KHO}}</td>
                    <td class="text-left">{{item.DIA_CHI_KHO}}</td>
                    <td v>{{item.MA_KHO_CHA}}</td>
                    <td>{{item.TRUC_THUOC}}</td>
                    <td class="text-left">{{item.GHI_CHU}}</td>
                    <td>
                        <button class="btn btn-success btn-circle" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#myEdit"><i class="glyphicon glyphicon-edit"></i></button>
                    </td>
                    <td>
                        <button class="btn btn-warning btn-circle" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#delete_item"><i class="glyphicon glyphicon-remove"></i></button>
                        <!--<button class="btn btn-warning btn-circle" ng-click="delete(item.MA_KHO)"><i class="glyphicon glyphicon-remove"></i></button>-->
                    </td>

                </tr>
                <!--Detail row-->
                <tr ng-if="item.expanded" dir-paginate-end="">    
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="9" style="border: none !important">
                        <dir-pagination-controls max-size="1" style="float:right;"
                                                 direction-links="true"
                                                 boundary-links="true">
                        </dir-pagination-controls>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script src="~/Content/download/angularjs/angular-ui-router.js"></script>

