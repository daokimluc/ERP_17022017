@{
    ViewBag.Title = "Phân quyền cho người dùng";
}
<link href="~/Areas/HopLong/Content/css/phanquyenHL.css" rel="stylesheet" />
<link href="~/Content/download/dist/css/AdminLTE.min.css" rel="stylesheet" />
<script src="~/Content/download/angularjs/angular.min.js"></script>
<link href="~/Content/download/plugins/ui-listview/ui-listView.css" rel="stylesheet" />
<script src="~/Content/download/plugins/ui-listview/ui-listView.js"></script>
<script src="~/Areas/HopLong/Content/js/HeThong/nghiepvunguoidung.js"></script>
<div class="content" ng-app="phanquyen" ng-controller="phanquyenCtrl">
    <div class="contact-list panel panel-default">



        <div class="panel-heading">
            <input class="form-control" ng-model="search" placeholder="Search Name.." />
        </div>
        <!--Danh sách nghiệp vụ-->
        <div class="pricing-table pricing-three-column row list-nv">
            <div class="plan col-sm-4 col-lg-4 box-nv">
                <div class="panel-body box-nv">
                    <div class="ui-list-view-bordered box-nv" ui-list-view="nghiepvu in danhsachnghiepvu | filter:search">
                        <p class="name" ng-click="check(nghiepvu.ID)"><strong>{{ nghiepvu.TEN_NGHIEP_VU }}</strong></p>
                    </div>
                </div>
            </div>
            <!--Chi tiết nghiệp vụ-->
            <div class="plan col-sm-4 col-lg-4 box-nv second-box">
                <div class="col-md-6">
                    <div ng-show="check_click">
                        <div class="panel-body box-nv">
                            <table>
                                <tr ng-repeat="x in chitietnghiepvu">
                                    <td>

                                        <input type="checkbox" autocomplete="off" ng-checked="item.MODEL_DAC_BIET==true" ng-model="cap_nhap_nghiep_vu">

                                    </td>
                                    <td>{{x.TEN_CHI_TIET}}</td>
                                </tr>
                            </table>

                        </div>
                    </div>
                </div>
                <div class="col-md-6">

                </div>
            </div>
        </div>
        <!--End danh sách nghiệp vụ-->
    </div>



</div>
